pipeline{
  agent any
    stages('Build'){
      steps{
        sh 'mvn clean install'
        echo 'Build stage successful'
      }
     }
     stage('Test'){
      steps{
      sh 'mvn test'
      echo 'test stage successful'
      }
     }
     stage('Deploy'){
      steps{
      sh 'mvn Deploy'
      echo 'Deployment stage successful'
      }
     }
     post{
      failure{
      echo 'pipeline failed'
      }
     }
}
   
